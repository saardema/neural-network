{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Open in Godot",
			"type": "shell",
			"command": "$GODOT -e",
			"problemMatcher": [],
			"presentation": {
				"echo": true,
				"reveal": "silent",
				"focus": false,
				"panel": "shared",
				"showReuseMessage": true,
				"clear": false
			}
		},
		{
			"label": "Release build",
			"type": "shell",
			"command": "$GODOT --export-release NeuralNetwork --headless && ./build/release/NeuralNetwork.command",
			"problemMatcher": []
		},
		{
			"label": "Run release build",
			"type": "shell",
			"command": "./build/release/NeuralNetwork.command"
		},
		{
			"label": "Run in release mode",
			"type": "shell",
			"command": "${workspaceFolder}/build/macos_template.app/Contents/MacOS/godot_macos_release.universal",
			"problemMatcher": [],
			"group": {
				"kind": "build",
				"isDefault": true
			}
		}
	]
}
